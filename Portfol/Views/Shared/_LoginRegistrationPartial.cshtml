<div class="container-login-registration">
    <div class="block-container">
        <div class="block">
            <section class="block_item block-item">
                <h2 class="block-item_title">У вас уже есть аккаунт?</h2>
                <button class="block-item_btn signin-btn">Войти</button>
            </section>
            <section class="block_item block-item">
                <h2 class="block-item_title">У вас нет аккаунта?</h2>
                <button class="block-item_btn signup-btn">Зарегистрироваться</button>
            </section>
        </div>
        <div class="form-box">
            <form class="form form_signin">
                <a class="google"><img src="~/img/google_ico.png" class="google-img" /></a>
                <h3 class="form_title">Вход</h3>
                <label >
                    <input type="text" id="signin_email"/>
                    <span>Почта</span>
                </label>
                <label >
                    <input type="password" id="signin_password"/>
                    <span>Пароль</span>
                </label>
                <div class="form-btn form_btn_signin">Войти</div>
                
                <div id="error-messages-singin"></div>
            </form>
            <form class="form form_signup">
                <h3 class="form_title">Регистрация</h3>
                <label>
                    <input type="text" id="signup_login"/>
                    <span>Логин</span>
                </label>
                <label >
                    <input type="text" id="signup_email" />
                    <span>Почта</span>
                </label>
                <label >
                    <input type="password" id="signup_password"/>
                    <span>Пароль</span>
                </label>
                <label >
                    <input type="password" id="signup_confirm_password"/>
                    <span>Подтвердите пароль</span>
                </label>
                <div class="form-btn form_btn_signup">Зарегистрироваться</div>
                <div id="error-messages-singup"></div>
            </form>
        </div>
    </div>
    <div class="overlay"></div>
</div>