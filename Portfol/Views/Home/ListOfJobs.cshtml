@model Domain.ViewModel.ListOfJobsViewModel

@{
    ViewData["Title"] = "Список вакансий";
    Layout = "_Layout";
}

<div class="container-list-jobs">
    <div class="link-page">
        <a href="/Home/Index">Главная</a> > 
        <a href="/Home/ListOfCountries">Категории</a> > 
        Вакансии
    </div>
    <div class="container-filter-jobs">
        <div class="filter">
            <h3>Фильтр</h3>
            <div class="price-filter">

                <span id="adult-min-label">0</span>
                <label>Минимальная цена:</label>
                <input type="range" id="adult-min-price" min="0" max="200000" value="0">
                <label>Максимальная цена:</label>
                <input type="range" id="adult-max-price" min="0" max="200000" value="200000">
                <span id="adult-max-label">1000</span>
                <div>Текущие значения: <span id="adult-price-values">0-200000</span></div>

            </div>
        </div>
        <input style="display:none;" id="idCountry" value="@Model.Category_id" />
        <div class="filter-button">
            <button id="apply-filter"> Применить фильтр</button >
        </div>

        <div id="result"></div>

        <div class="container-jobs">
                <div class="jobs-header">
                    <h1>Список вакансий</h1>
                </div>
                <div class="list-jobs">
                    @if (Model.Jobs != null && Model.Jobs.Any())
                    {
                        @foreach (var job in Model.Jobs)
                        {
                            <div class="job-item">
                                <div class="job-header">
                                    <h2>@job.Title</h2>
                                    <span class="job-location">@job.Location</span>
                                </div>
                                <div class="job-details">
                                    <p><strong>Описание:</strong> @job.Description</p>
                                    <p><strong>Требования:</strong> @job.Requirements</p>
                                    <p><strong>Зарплата:</strong> @job.salary$</p>
                                    <p><strong>Дата публикации:</strong> @job.CreatedAt.ToShortDateString()</p>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="no-jobs">
                            <p>Вакансий пока нет.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
</div>
